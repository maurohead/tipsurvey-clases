{% extends '::base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/Cursobackend/css/style.css') }}" /> 
{% endblock %}

{% block body %}
  <div id="root">
      <div id="topBars">
        <div id="topLeftBar">
            {% include 'CursoBackendBundle::includes/top-bars-left.html.twig' %}            
        </div>
        <div id="topRightBar">
            {% include 'CursoBackendBundle::includes/top-bars-right.html.twig' %}
        </div>
      </div>
      <div id="header">
            <span id="logo"></span>
      </div>
      <div>
          {% include 'CursoBackendBundle::includes/main-menu.html.twig' %}  
      </div>  

      <div class="page">
          <div class="pageWrap">
              <div class="nav_sep">
                <div id="top_nav">
              {% include 'CursoBackendBundle::includes/sub-menu.html.twig' %}            
                </div>
              </div>
              <div id="dashboard">
              {% if app.session.has('survey') %}
                  {% include 'CursoBackendBundle::includes/left-menu.html.twig' %}
              {% endif %}
                    
          {% block optionsexport %} {% endblock %} 
          {% block menuizq %}{% endblock %}

                    <div id="contenido" class="{{ app.session.has('survey') ? 'width-contenido-menu' : 'width-contenido' }}">
                      
                      {% block content %} {% endblock %}
                      
                    </div>
                    <br class="clearfloat" />
                  </div>                
              </div>
        </div>
        
      </div>
      
      <div id="footer">
          <hr />
          <div>Versión TipSurvey 1.0.1</div>
          <div>
            <a><img border="0" src="{{ asset('bundles/Cursobackend/images/logo-Curso.png')}}" /></a>
            &copy; 2011 - Curso | info@Curso.cl
          </div>
      </div>
{% endblock %}